<!DOCTYPE html>
<html>
<head>
<style>
body, html {
    margin:0;
    padding:0;
}
.container {
    width:100%;
    height:300px;
    background:pink;
    text-align:center;
}
.link {
    position:relative;
    font-size:24px;
}
.close {
    width:30px;
    
}
.popup {
    height:200px;
    width:200px;
    text-align:left;
    position:relative;
    left:50%;
    top:50%;
    background:white;
    transform:translate(-50%, -50%);   
    display:none;
}
.popup-show {
    display:block;
}
</style>
</head>
<body>
<div class="container">
<a href="#" class="link">Кликайте сюда!</a>
<div class="popup">
    <a href="#" class="cancel"><img class="close" src="http://im3-tub-ru.yandex.net/i?id=a821e36d1a2a664e2ad67524ba03d784-58-144&n=21"></a>
</div>
<script>
var link = document.querySelector(".link");
var popup = document.querySelector(".popup");
var close = popup.querySelector(".cancel");

link.addEventListener('click', function(event) {
    event.preventDefault();
    popup.classList.add('popup-show')
}, false);

close.addEventListener('click', function(event) {
    event.preventDefault();
    popup.classList.remove('popup-show')
}, false);
</script>
</body>
